<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dip" 
	android:layout_marginLeft="0dip">           
    <ImageView android:id="@+id/image"
        android:layout_width="0dip"
        android:layout_height="0dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:padding="0dip" 
        android:layout_marginLeft="0dip"
        android:scaleType="centerCrop"
        android:contentDescription="@string/image_desc"
        android:clickable="true"
        android:background="#207F7F7F"/>
    
    <ProgressBar android:id="@+id/image_downloading"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:indeterminateDrawable="@drawable/progress_large_holo"
        />
    
    <ImageView android:id="@+id/image_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/image_desc"
        android:clickable="false"
        android:src="@drawable/ic_dialog_alert_holo_light"/>
</RelativeLayout>
